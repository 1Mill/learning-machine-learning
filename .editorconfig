# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 8
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{config,bash,bashrc,hcl,pem,sh,tfvars}]
end_of_line = lf

[*.{md,yaml,yml}]
indent_size = 2
indent_style = space

[{package.json,package-lock.json}]
indent_size = 2
indent_style = space

[*.{py}]
indent_size = 4
indent_style = space
